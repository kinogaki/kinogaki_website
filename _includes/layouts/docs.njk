---
layout: layouts/base.njk
---
<div class="docs-container">
    <nav class="docs-nav">
        {%- for doc in collections.docs %}
        <a href="{{ doc.url }}" {% if page.url == doc.url %}class="active"{% endif %}>
            {{ doc.data.title }}
        </a>
        {%- endfor %}
    </nav>
    
    <main class="docs-content">
        {{ content | safe }}
    </main>
</div>